(*
Chatbox.ClickButtonId
~~~~~~~~~~~~~~~~~~~~~
.. pascal:: function TRSChatbox.ClickButtonId(Query: String; Id:Int32; UpText:String; WaitTime: Int32): Boolean;

Clicks the button `Id`, checks uptext to verify that the corrrect button was clicked
If the given button id doesn't match the UpText it will sift through the other buttons looking for it.
*)
function TRSChatbox.ClickButtonId(Query: String; Id:Int32; UpText:String; WaitTime: Int32): Boolean;
var
  i: Int32;
  TPA: TPointArray;
  Buttons: TBoxArray;
  B: TBox;
begin
  if not Self.WaitButtonQuery(Query, WaitTime) then
    Exit;

  FindColorsTolerance(TPA, $080808, Self.GetChatArea(), 16);
  for TPA in TPA.Cluster(2) do
  begin
    B := TPA.Bounds;

    if (B.Width > 30) and (B.Height > 60) then
      Buttons += B;
  end;

  if Id <= Length(Buttons) then
  begin
    Buttons.SortFromMidPoint(Buttons[Id-1].Middle);
    for i:=0 to High(Buttons) do
    begin
      Mouse.Move(Buttons[i]);
      Result := (UpText = '') or MainScreen.IsUpText(UpText);
      if Result then
      begin
        Wait(60,120);
        Mouse.Click(mouse_Left);
        Exit;
      end;
    end;
  end;
end;

(*
Chatbox.PointToButtonId
~~~~~~~~~~~~~~~~~~~~~~~
.. pascal:: function TRSChatbox.PointToButtonId(PT: TPoint): Int32;

Returns the ID of the button under the given point and ``-1`` if it failed.
*)
function TRSChatbox.PointToButtonId(PT: TPoint): Int32;
var
  i: Int32;
  TPA: TPointArray;
  B: TBox;
begin
  if Self.GetButtonQuery() = '' then
    Exit(-1);

  FindColorsTolerance(TPA, $080808, Self.GetChatArea(), 16);
  for TPA in TPA.Cluster(2) do
  begin
    B := TPA.Bounds;
    if (B.Width > 30) and (B.Height > 60) then
    begin
      if B.Contains(PT) then Exit(Result + 1);
      Inc(Result);
    end;
  end;
  Result := -1;
end;

(*
Chatbox.GetButtonIdBounds
~~~~~~~~~~~~~~~~~~~~~~~~~
.. pascal:: function TRSChatbox.GetButtonIdBounds(ID: Int32): TBox;

Returns the bounds of the button with the given ID.
*)
function TRSChatbox.GetButtonIdBounds(ID: Int32): TBox;
var
  i: Int32;
  TPA: TPointArray;
  B: TBox;
begin
  if Self.GetButtonQuery() = '' then
    Exit();

  i := 1;
  FindColorsTolerance(TPA, $080808, Self.GetChatArea(), 16);
  for TPA in TPA.Cluster(2) do
  begin
    B := TPA.Bounds;
    if (B.Width > 30) and (B.Height > 60) then
    begin
      if i = ID then Exit(B);
      Inc(i);
    end;
  end;
end;

(*
Chatbox.ClickButtonColor
~~~~~~~~~~~~~~~~~~~~~~~~~
.. pascal:: function TRSChatbox.ClickButtonColor(Query: String; Color, Tolerance:Int32; UpText:String; WaitTime: Int32): Boolean;

Clicks the button matching both color and uptext, starting with the one that had the best
initial match, and then sifting down to less good matches.
*)
function TRSChatbox.ClickButtonColor(Query: String; Color, Tolerance:Int32; UpText:String; WaitTime: Int32): Boolean;
var
  i, tmp: Int32;
  TPA: TPointArray;
  B: TBox;
  best: array of record Box: TBox; Count: Int32; end;
begin
  if not Self.WaitButtonQuery(Query, WaitTime) then
    Exit;

  FindColorsTolerance(TPA, $080808, Self.GetChatArea(), 16);
  for TPA in TPA.Cluster(2) do
  begin
    B := TPA.Bounds;
    if (B.Width > 30) and (B.Height > 60) then
    begin
      tmp := CountColorTolerance(Color, B.Expand(-6), Tolerance);
      if (tmp = 0) then continue;

      if (Length(best) = 0) or (tmp > best[0].Count) then
        Insert([B,tmp], best, 0);
    end;
  end;

  for i:=0 to High(best) do
  begin
    Mouse.Move(best[i].Box);
    Result := MainScreen.IsUpText(uptext);
    if Result then
    begin
      Wait(60,120);
      Mouse.Click(mouse_Left);
      Exit();
    end;
  end;
end;


(*
Chatbox.GetTitle
~~~~~~~~~~~~~~~~
.. pascal:: function TRSChatBox.GetTitle: String;

Returns the title of a chatbox interaction such as the NPC name.
*)
function TRSChatBox.GetTitle(): String;
var
  TPA: TPointArray;
  ATPA: T2DPointArray;
  b: TBox;
begin
  FindColors(TPA, 128, Self.GetChatArea());
  if (Length(TPA) < 10) then
    Exit;

  ATPA := ClusterTPAEX(TPA, 1, 5);
  SortATPAFromFirstPointX(ATPA, Point(0, 0));
  b := GetTPABounds(ATPA[0]);
  b.Y1 -= 1;
  b.X2 := GetTPABounds(ATPA[High(ATPA)]).X2;
  b.Y2 += 5;
  Result := OCR.Recognize(b, TCompareRules([128]), NPCFont);
end;

