  if (Length(TPA) < 10) then
    Exit;

  ATPA := ClusterTPAEX(TPA, 1, 5);
  SortATPAFromFirstPointX(ATPA, Point(0, 0));
  b := GetTPABounds(ATPA[0]);
  b.Y1 -= 1;
  b.X2 := GetTPABounds(ATPA[High(ATPA)]).X2;
  b.Y2 += 5;
  Result := OCR.Recognize(b, TCompareRules([0,5]), NPCFont);
end;

